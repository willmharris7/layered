{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "start.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/start.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/start.js",
    "test": "jest"
  },
  "author": "Will Harris",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.1",
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.3",
    "@types/supertest": "^2.0.11",
    "body-parser": "^1.19.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "concurrently": "^6.3.0",
    "jest": "^27.3.0",
    "nodemon": "^2.0.13",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
